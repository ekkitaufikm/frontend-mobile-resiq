<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/biru3"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@color/biru1"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="-190dp"
        android:textSize="25dp"
        android:text="resiq.id"
        android:textAlignment="center"
        android:textColor="@color/white" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="-40dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="right"
        android:onClick="clickDaftar"
        android:src="@drawable/user" />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-43dp"
        android:src="@drawable/menu" />


    <androidx.cardview.widget.CardView
        android:id="@+id/fullscreen_content_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:elevation="5dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
>

            <FrameLayout
                android:layout_width="400dp"
                android:background="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="150dp"
                android:layout_height="200dp">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Pendapatan"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/biru1" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="50dp"
                    android:text="Hasil Penjualan"
                    android:layout_marginLeft="38dp"
                    android:textColor="@color/biru6" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="45dp"
                    android:text="Rp 37.000"
                    android:layout_marginLeft="270dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/biru1" />

                <View
                    android:layout_width="match_parent"
                    android:visibility="visible"
                    android:layout_marginTop="80dp"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="36dp"
                    android:background="@color/biru2"/>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="90dp"
                    android:text="Detail Penjualan Sampah"
                    android:layout_marginLeft="38dp"
                    android:textColor="@color/biru6" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="110dp"
                    android:text="Plastik Kresek"
                    android:layout_marginLeft="38dp"
                    android:textColor="@color/biru4" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="110dp"
                    android:text="Rp 10.000"
                    android:layout_marginLeft="300dp"
                    android:textColor="@color/biru5" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="130dp"
                    android:text="Plastik Botol"
                    android:layout_marginLeft="38dp"
                    android:textColor="@color/biru4" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="130dp"
                    android:text="Rp 27.000"
                    android:layout_marginLeft="300dp"
                    android:textColor="@color/biru5" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="150dp"
                    android:text="Plastik Tebal"
                    android:layout_marginLeft="38dp"
                    android:textColor="@color/biru4" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="150dp"
                    android:text="Rp 0"
                    android:layout_marginLeft="300dp"
                    android:textColor="@color/biru5" />

            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:cardCornerRadius="15dp"
        android:elevation="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="400dp"
                android:background="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="150dp"
                android:layout_height="400dp">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="20dp"
                    android:text="SEJARAH PENJUALAN"
                    android:layout_marginLeft="38dp"
                    android:textStyle="bold"
                    android:textColor="@color/biru1" />

                <View
                    android:layout_width="match_parent"
                    android:visibility="visible"
                    android:layout_marginTop="60dp"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="36dp"
                    android:background="@color/biru2"/>

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="70dp"
                    android:text="Plastik Kresek"
                    android:layout_marginLeft="38dp"
                    android:textColor="@color/biru5" />

                <TextView
                    android:layout_width="150dp"
