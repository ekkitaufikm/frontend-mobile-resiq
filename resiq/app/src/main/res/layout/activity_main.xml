                    android:text="28-10-2021"
                    android:layout_marginLeft="38dp"
                    android:textColor="@color/biru4" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="90dp"
                    android:text="Rp 10.000"
                    android:layout_marginLeft="115dp"
                    android:textColor="@color/biru4" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="68dp"
                    android:textSize="27dp"
                    android:text="Selesai"
                    android:layout_marginLeft="270dp"
                    android:textColor="@color/ijo" />

                <View
                    android:layout_width="match_parent"
                    android:visibility="visible"
                    android:layout_marginTop="120dp"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="36dp"
                    android:background="@color/biru2"/>

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="130dp"
                    android:text="Plastik Botol"
                    android:layout_marginLeft="38dp"
                    android:textColor="@color/biru5" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="130dp"
                    android:text="4 Kg"
                    android:layout_marginLeft="135dp"
                    android:textColor="@color/biru4" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="147dp"
                    android:text="28-10-2021"
                    android:layout_marginLeft="38dp"
                    android:textColor="@color/biru4" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="147dp"
                    android:text="Rp 27.000"
                    android:layout_marginLeft="115dp"
                    android:textColor="@color/biru4" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="130dp"
                    android:textSize="27dp"
                    android:text="Selesai"
                    android:layout_marginLeft="270dp"
                    android:textColor="@color/ijo" />

                <View
                    android:layout_width="match_parent"
                    android:visibility="visible"
                    android:layout_marginTop="180dp"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="36dp"
                    android:background="@color/biru2"/>


            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="right"
            android:layout_marginTop="290dp"
            android:src="@drawable/assetmain" />
    </androidx.cardview.widget.CardView>

</LinearLayout>